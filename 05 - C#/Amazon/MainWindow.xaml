        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amazon"
        mc:Ignorable="d"
        Title="Ajouter un produit" Height="500" Width="900" Icon="images.png">
    <Grid>
        <Image HorizontalAlignment="Left" Height="136" Width="136" Source="71eXsSBVyML._AC_SL1500_.jpg" Margin="51,72,0,261"/>
        <Label Content="Titre du produit : " HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="23" Margin="99,3,0,0" TextWrapping="Wrap" Text="KOORUI Ecran PC Gaming 27 Pouces 165hz, Moniteur PC Dalle IPS" VerticalAlignment="Top" Width="784"/>
        <Button Content="Charger une image" HorizontalAlignment="Left" Margin="59,210,0,0" VerticalAlignment="Top" Width="127"/>
        <Label Content="Image du produit : " HorizontalAlignment="Left" Margin="65,42,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Prix :" HorizontalAlignment="Left" Margin="37,244,0,0" VerticalAlignment="Top" Width="62"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="99,244,0,199" TextWrapping="Wrap" Text="269,99" Width="86"/>
        <Label Content="Marque :" HorizontalAlignment="Left" Margin="34,275,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="99,275,0,168" TextWrapping="Wrap" Text="KORRUI" Width="86" TextChanged="TextBox_TextChanged"/>
        <Label Content="Modele :" HorizontalAlignment="Left" Margin="34,308,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="99,308,0,135" TextWrapping="Wrap" Text="‎27E1" Width="86"/>
        <TabControl HorizontalAlignment="Left" Height="386" Margin="218,57,0,0" VerticalAlignment="Top" Width="658">
            <TabItem Header="Caracteristiques technique">
                <Grid>
                    <Label Content="Taille d'écran (Pouce) :" HorizontalAlignment="Left" Margin="15,18,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="146"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="161,19,0,0" TextWrapping="Wrap" Text="27" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right"/>
                    <Label Content="Fréquence (Hz) :" HorizontalAlignment="Left" Margin="322,129,0,0" VerticalAlignment="Top" Width="144" HorizontalContentAlignment="Right"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="466,130,0,0" TextWrapping="Wrap" Text="165" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right"/>
                    <Label Content="Technologie d'affichage :" HorizontalAlignment="Left" Margin="16,75,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="145"/>
                    <ComboBox HorizontalAlignment="Left" Margin="161,77,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem IsSelected="True">IPS</ComboBoxItem>
                        <ComboBoxItem>LED</ComboBoxItem>
                        <ComboBoxItem>LCD</ComboBoxItem>
                        <ComboBoxItem>CRT</ComboBoxItem>
                    </ComboBox>
                    <Label Content="Rapport Hauteur/Longueur :" HorizontalAlignment="Left" Margin="2,46,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="159"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="161,47,0,0" TextWrapping="Wrap" Text="16/9" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right"/>
                    <Label Content="Résolution Maximum :" HorizontalAlignment="Left" Margin="1,130,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="160"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="161,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="1080p Full HD Pixels"/>
                    <Label Content="Résolution :" HorizontalAlignment="Left" Margin="2,102,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="159"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="161,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="1920px1080p" RenderTransformOrigin="0.421,-1.292"/>
                    <Label Content="Résolution native :" HorizontalAlignment="Left" Margin="4,157,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="157"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="161,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="1920px1080p" TextChanged="TextBox_TextChanged_2"/>
                    <Label Content="Type de connecteur :" HorizontalAlignment="Left" Margin="2,186,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="159"/>
                    <CheckBox Content="HDMI" HorizontalAlignment="Left" Margin="162,194,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
                    <CheckBox Content="DVI" HorizontalAlignment="Left" Margin="162,209,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked_1"/>
                    <CheckBox Content="DisplayPort" HorizontalAlignment="Left" Margin="162,224,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="VGA" HorizontalAlignment="Left" Margin="162,238,0,0" VerticalAlignment="Top"/>
                    <Label Content="Luminosité de l'écran (cd/㎡) :" HorizontalAlignment="Left" Margin="300,69,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="166"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="466,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="300"/>
                    <Label Content="Temps de réponse (ms) : " HorizontalAlignment="Left" Margin="300,98,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="166"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="466,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="1"/>
                    <Label Content="Contraste de l'image :" HorizontalAlignment="Left" Margin="300,17,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="166"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="466,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="1000;1"/>
                    <Label Content="Angle de vue réel (Dégrées) :" HorizontalAlignment="Left" Margin="300,43,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="166"/>
                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="24" Margin="466,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" Text="178"/>
                    <Label Content="Utilisation :" HorizontalAlignment="Left" Margin="322,157,0,0" VerticalAlignment="Top" Width="144" HorizontalContentAlignment="Right"/>
                    <RadioButton Content="Profesionnel" Width="100" Margin="467,184,85,159"/>
                    <RadioButton Content="Personnel" Margin="467,164,67,174" Checked="RadioButton_Checked"/>


                </Grid>
            </TabItem>
            <TabItem Header="Description">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Description du produit :" HorizontalAlignment="Left" Margin="16,3,0,0" VerticalAlignment="Top"/>

                    <Label Content="Mots clés :" HorizontalAlignment="Left" Margin="14,272,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Margin="13,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="489" Text="Gamer , 27 , IPS , Trop cool , Pas chere tqt." VerticalScrollBarVisibility="Visible" TextChanged="TextBox_TextChanged_1"/>
                    <RichTextBox HorizontalAlignment="Left" Height="236" Margin="14,29,0,0" VerticalAlignment="Top" Width="619"  TextChanged="RichTextBox_TextChanged">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="À propos de cet article Dalle IPS de 27 pouces avec Résolution FHD (1920 x 1080 px) et DCI-P3 90% de gamme de couleurs; Format d'image : 16 : 9. Écran pc avec HDR10, Taux de rafraîchissement de 165 Hz et Temps de réponse de 1 ms; écran pc 27 compris les technologies de faible lumière bleue et sans scintillement, angle de vision large de 178°, luminosité/contraste : 300 cd/m²【KOORUI ecran pc 27 pouces vous emmène dans les mondes du jeu immersif】 Le écrans pc utilise le mode de jeu unique - un positionnement précis améliore les taux de tir et de réussite et augmente ainsi vos chances de gagner le jeu. ecran pc 27 pouces avec taux de rafraîchissement de 165 Hz garantit que le jeu fonctionne sans bégaiement gênant. La technologie Adaptive Freesync garantit que les images sont affichées en douceur et que les retards d'image n'ont aucune chance.【90% DCI-P3 de gamme de couleurs offre une expérience comme au cinéma】L'ecran 165hz avec la nouvelle génération de panneaux FAST IPS pour une expérience de visionnage incomparable. L'ecran pc 27 pouces avec une couverture de couleur professionnelle DCI-P3 à 90 % pour des tons et des transitions de couleurs plus intenses et expressifs; Dalle ips avec Angle de vision large de 178 degrés, de sorte que tous les angles de couleur semblent plus réalistes, délicats et cohérents.【Design Unique Avec Trou Noir】Gaming ecran combine un savoir-faire exquis avec les dernières technologies et apporte un design de boîtier ultra-mince. L'aspect noir mat élégant avec garniture bleue vous plonge dans la haute technologie de KOORUI. Design ergonomique avec inclinaison de -5° ~ +15° ; rotation de +30 °~ -30 ° ; pivotement de +90° ~ -90° et réglage de la hauteur de 0 ~ 110 mm. Le moniteur de jeu 27 pouces est compatible VESA et vous permet plus d'espace dans votre environnement.【Les connexions de diversification vous offrent des possibilités illimitées】 L'ecran pc 165hz offre un matériel de connexion utile. Il permet une connectivité transparente avec votre PC et votre Play Station avec DisplayPort, Type-c (15W) et HDMI et est donc le partenaire idéal pour le travail et les loisirs."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <Label Content="Couleur :" HorizontalAlignment="Left" Margin="511,272,0,0" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Left" Margin="510,299,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem>Bleu</ComboBoxItem>
                        <ComboBoxItem>Rouge</ComboBoxItem>
                        <ComboBoxItem>Vert</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">Noir</ComboBoxItem>
                        <ComboBoxItem>Jaune</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Infos livraison / Stock" Margin="-2,-2,-2,0">
                <Grid>
                    <Label Content="Expedier par : " HorizontalAlignment="Left" Margin="2,9,0,0" VerticalAlignment="Top" Width="105" HorizontalContentAlignment="Right"/>
                    <RadioButton Content="&quot;NotreSociete&quot;" HorizontalAlignment="Left" Margin="108,13,0,0" VerticalAlignment="Top" Height="19" VerticalContentAlignment="Center"/>
                    <RadioButton Content="Amazon" HorizontalAlignment="Left" Margin="108,32,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1" Height="19" VerticalContentAlignment="Center"/>
                    <Label Content="Démentions de l'article :" HorizontalAlignment="Left" Margin="2,55,0,0" VerticalAlignment="Top" Width="139" HorizontalContentAlignment="Right"/>
<TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="99,244,0,199" TextWrapping="Wrap" Text="269,99" Width="86"/>

                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Vendu par : " HorizontalAlignment="Left" Margin="0,330,0,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right"/>
        <RadioButton Content="&quot;NotreSociete&quot;" HorizontalAlignment="Left" Margin="99,339,0,0" VerticalAlignment="Top" Width="97"/>
        <RadioButton Content="Amazon" HorizontalAlignment="Left" Margin="99,358,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1" Width="97"/>
        
    </Grid>
</Window>
